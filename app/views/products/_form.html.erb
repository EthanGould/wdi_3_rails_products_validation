
<!-- product is local variable of this partial -->
<%= form_for product do |f| %>
  <%= f.label :name %> <br> 
  <%= f.text_field :name %> 
  <br> 
  <%= f.label :description %> <br> 
  <%= f.text_area :description %> 
  <br> 
  <%= f.label :price %> <br> 
  <%= f.text_field :price %> 
  <br> 
  <%= f.label :category %> <br> 
  <%= f.text_field :category %> 
  <br> 
  <%= f.submit %> 
<% end %>
